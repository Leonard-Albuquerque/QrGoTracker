# Environment file for local development
# Copy to .env and edit values as needed before running

# Server port
PORT=8080

# Public base URL used to compose short and QR URLs
# Use http://localhost:PORT for local runs
BASE_URL=http://localhost:8080

# SQLite DB file path (relative to project root)
DB_PATH=./data/qr.db

# Salt for optional IP hashing / signatures. Change in production.
HASH_SALT=change-me-but-set-a-secure-value

# Rate limiter
RL_ENABLED=true
RL_RPS=5
RL_BURST=10

# CORS allowed origins (comma-separated). Empty = disabled.
ALLOW_ORIGINS=

# Logging level (informational)
LOG_LEVEL=info
PORT=8080
BASE_URL=http://localhost:8080
DB_PATH=./data/qr.db go run ./cmd/server
